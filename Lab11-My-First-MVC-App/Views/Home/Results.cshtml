@model Lab11_My_First_MVC_App.Models.Person

<head>
    <link href="~/StyleSheet.css" rel="stylesheet" type="text/css" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
</head>

<table class="table-dark table-hover">
    <caption>Person of the Year Results</caption>
    <thead class="thead-dark">
        <tr>
            <th scope="col">Year</th>
            <th scope="col">Honor</th>
            <th scope="col">Name</th>
            <th scope="col">Country</th>
            <th scope="col">Birth Year</th>
            <th scope="col">Death Year</th>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Context</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Year</td>
            <td>@item.Honor</td>
            <td>@item.Name</td>
            <td>@item.Country</td>

            @if (item.Birth_Year == 0)
            {
                <td data-label="Birth Year">Unknown</td>

            }
            else
            {
                <td data-label="Death Year">@item.DeathYear</td>

            }
            @if (item.Birth_Year == 0)
            {
                <td data-label="Death Year">N/A</td>

            }
            else
            {
                <td data-label="Death Year">@item.DeathYear</td>

            }
            <td data-label="Title">@item.Title</td>
            <td data-label="Category">@item.Category</td>
            <td data-label="Context">@item.Context</td>

        </tr>
        }
    </tbody>
</table>

<a asp-controller="Home" asp-action="Index">New Search</a>